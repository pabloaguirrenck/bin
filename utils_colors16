#!/bin/sh

#============================================================
# ~/bin/utils_colors16
# Pablo Aguirre Núñez
#============================================================

#------------------------------------------------------------
# Display colorpalette with 16 colors. (cterm colors)
#------------------------------------------------------------
for i in {0..15} ; do
    printf "\x1b[48;5;%sm%3d\e[0m " "$i" "$i"
    if (( i == 15 )) || (( i > 15 )) && (( (i-15) % 6 == 0 )); then
        printf "\n";
    fi
done

# Set vim filetype
# vim: set ft=sh:
